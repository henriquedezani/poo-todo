@model TodoList.Models.UsuarioLoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Lista de Tarefas";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if(ViewBag.Message != null) {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
    }

    <form asp-controller="Usuario" asp-action="Login" method="POST">
        <div class="form-group">
            <label>E-mail</label>
            <input class="form-control" asp-for="Email" type="text" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input class="form-control" asp-for="Senha" type="password" />
            <span asp-validation-for="Senha"></span>
        </div>
        <button class="btn btn-primary">Entrar</button>
    </form>
</div>